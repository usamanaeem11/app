# =============================================================================
# WorkMonitor Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=workmonitor
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=workmonitor
DATABASE_URL=postgresql://workmonitor:your_secure_database_password_here@postgres:5432/workmonitor

# -----------------------------------------------------------------------------
# MinIO Object Storage (S3-compatible)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_ENDPOINT=minio:9000
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=workmonitor

# For external access (replace with your domain)
MINIO_EXTERNAL_ENDPOINT=https://storage.yourdomain.com

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=5000

# JWT Authentication
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_URL=https://api.yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_SOCKET_URL=wss://api.yourdomain.com
REACT_APP_MINIO_URL=https://storage.yourdomain.com

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_NAME=WorkMonitor
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Alternative: SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Payment Processing (Stripe)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_MONTHLY=price_monthly_id
STRIPE_PRICE_ID_YEARLY=price_yearly_id

# -----------------------------------------------------------------------------
# Redis (for sessions/caching - optional)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=info
SENTRY_DSN=https://your_sentry_dsn_here

# -----------------------------------------------------------------------------
# Desktop Tracker Configuration
# -----------------------------------------------------------------------------
TRACKER_SCREENSHOT_INTERVAL=300000
TRACKER_ACTIVITY_CHECK_INTERVAL=1000
TRACKER_UPLOAD_INTERVAL=60000

# -----------------------------------------------------------------------------
# SSL/TLS Configuration
# -----------------------------------------------------------------------------
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Let's Encrypt (for automatic SSL)
LETSENCRYPT_EMAIL=admin@yourdomain.com
LETSENCRYPT_DOMAIN=yourdomain.com

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
DOMAIN=yourdomain.com
API_SUBDOMAIN=api.yourdomain.com
STORAGE_SUBDOMAIN=storage.yourdomain.com
